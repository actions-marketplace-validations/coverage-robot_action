{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./lib",
    "baseUrl": ".",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@requests": ["src/requests"],
      "@utilities": ["src/utilities"],
      "@errors": ["src/errors"]
    }
  },
  "exclude": ["node_modules"]
}
